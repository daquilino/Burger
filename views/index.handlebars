
<h1>#unless this.devoured</h1>
<ul>
{{#each pizzas}}
    {{#unless this.devoured}}
      <li><strong>{{this.id}}.)</strong>{{this.pizza_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value=1>
          <button type="submit">EAT ME!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h1>#if this.devoured</h1>
<ul>
{{#each pizzas}}
    {{#if this.devoured}}
      <li>
        <strong>{{this.id}}.)</strong>{{this.pizza_name}}   
      </li>
    {{/if}}
  {{/each}}
</ul>

<div>
  
 <h2>Add a Pizza.</h2>
<form  action="/" method="POST">

  <div class="form-group">
    <label for="addPizza">Pizza Name:</label>
    <input type="text" id="addPizza" name="newPizza">
  </div>


  <button type="submit">Add Pizza</button>
</form>

</div>
